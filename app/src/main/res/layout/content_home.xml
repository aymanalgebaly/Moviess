<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_three"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_color"
        android:id="@+id/home_activity_appbar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/moov"
            android:id="@+id/home_activity_toolbar">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/parent_search"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/login_field_design"
                    android:hint="@string/search"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingEnd="20dp"
                    android:drawableEnd="@drawable/ic_search_black_24dp"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_activity_appbar"
        android:id="@+id/frame">

    </FrameLayout>

</RelativeLayout>