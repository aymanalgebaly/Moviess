<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_three"
    tools:context=".ui.fragments.ContactUsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/samawy"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:id="@+id/img_contact"
            android:layout_height="60dp"
            android:background="@mipmap/ic_launcher"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/hallo"
                android:id="@+id/hallo_contact"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/name_contact"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_can_we_help_you"
            android:id="@+id/txt_contact"
            android:textColor="@color/gray_two"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/curv_gray_field"
            android:layout_margin="40dp"
            android:hint="@string/message"
            android:id="@+id/msg_contact"
            android:textColorHint="@color/white"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:hint="@string/ayman_yahoo_com"
            android:id="@+id/mail_contact"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:background="@drawable/curv_gray_field"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_message"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/send_txt_btn_contact"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>