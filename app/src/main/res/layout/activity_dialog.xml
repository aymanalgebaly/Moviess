<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/back_comment"
    tools:context=".ui.activities.DialogActivity">

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/rate_bar_dialog"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/rate_field"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/curv_field_comment"
        android:hint="@string/write_comment"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"/>

    <Button
        android:id="@+id/rate_btn_movie"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/curv_gray_botton_design"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/rate_now"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"/>
</LinearLayout>